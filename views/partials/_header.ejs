<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
    </div>
      <% if (username) { %>
        <p class="ml-auto" style="margin: 1em; font-size: 20px"> Logged in as: <%= username %> </p>
        <form class="form-inline ml-auto" action="/logout" method="POST">
          <button type="logout" class="btn btn-outline-dark">Logout</button>
      </form>
      <% } else { %>
      <form class="form-inline ml-auto" action="/login" method="GET">
          <button type="submit" style="margin: 0.5em" class="btn btn-secondary">Login</button>
      </form>
      <form class="form-inline ml-auto" action="/register" method="GET">
        <button type="submit" style="margin: 0.5em" class="btn btn-outline-dark">Register</button>
    </form>
    <% } %>
  </nav>
</header>